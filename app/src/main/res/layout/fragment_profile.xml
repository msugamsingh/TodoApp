<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/frag_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout android:layout_width="180dp"
                                                   android:layout_gravity="center_horizontal"
                                                   android:textColorHint="#999999"
                                                   android:textAlignment="center"
                                                   android:layout_marginTop="28dp"
                                                   android:layout_height="wrap_content">

        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:hint="Your Name"
                  android:inputType="textPersonName"
                  android:id="@+id/user_name"
                  android:backgroundTint="@color/colorAccent"
                  android:textColor="@color/lightTextGrey"
                  android:singleLine="true" android:textAlignment="center"
                  android:layout_gravity="center_horizontal"
                  android:ems="10"
                  android:layout_margin="28dp"/>

    </android.support.design.widget.TextInputLayout>


    <ScrollView android:layout_width="match_parent"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="64dp"
                android:layout_height="wrap_content" android:fillViewport="true">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="2dp"
                    android:id="@+id/stats"
                    android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:srcCompat="@drawable/ic_stats"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Statistics"
                          android:layout_marginStart="4dp"
                          android:fontFamily="sans-serif-light"
                          android:textColor="@color/colorAccent"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="2dp"
                    android:id="@+id/settings"
                    android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:srcCompat="@drawable/ic_settings"/>


                <TextView android:layout_width="wrap_content"
                          android:text="Settings"
                          android:layout_marginStart="4dp"
                          android:fontFamily="sans-serif-light"
                          android:textColor="@color/colorAccent"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/settings_layout"
                          android:layout_marginStart="28dp"
                          android:layout_height="wrap_content">

                <Switch
                        android:text="Dark Mode                          "
                        android:textColor="@color/lightTextGrey"
                        android:checked="false"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/dark_switch"/>

                <Switch
                        android:text="Show quote on startup     "
                        android:textColor="@color/lightTextGrey"
                        android:checked="true"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/quote_switch"/>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="2dp"
                    android:id="@+id/instruction"
                    android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:tint="@color/colorAccent"
                           app:srcCompat="@drawable/ic_instruction"/>


                <TextView android:layout_width="wrap_content"
                          android:text="Instructions"
                          android:fontFamily="sans-serif-light"
                          android:textColor="@color/colorAccent"
                          android:layout_marginStart="4dp"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="2dp"
                    android:id="@+id/about"
                    android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:tint="@color/colorAccent"
                           app:srcCompat="@drawable/ic_info"/>


                <TextView android:layout_width="wrap_content"
                          android:text="About"
                          android:fontFamily="sans-serif-light"
                          android:textColor="@color/colorAccent"
                          android:layout_marginStart="4dp"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center"
                          android:id="@+id/about_layout"
                          android:layout_height="wrap_content">

                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/launcher_logo"
                           android:layout_gravity="center_horizontal"
                           android:layout_height="wrap_content"/>

                <TextView
                        android:text="4TR Productivity App v1.0.0"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/lightTextGrey"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Be Super Productive!"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/lightTextGrey"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Developer"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/lightTextGrey"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Sugam Singh (@msugamsingh)"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/lightTextGrey"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Forol"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/lightTextGrey"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>