<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="3"
              android:layout_margin="4dp"
              android:id="@+id/rv_completed_tasks"
              android:orientation="horizontal">


    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.7"
                  android:background="@color/lightf8"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="TITLE"
                  android:id="@+id/completed_task_title"
                  android:textColor="@color/lightTextGrey"
                  android:layout_margin="4dp"
                  android:textAllCaps="true"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/completed_task_description"
                  android:text="Some Desc "
                  android:textColor="@color/lightTextGrey"
                  android:layout_margin="4dp"
        />
    </LinearLayout>


    <LinearLayout android:layout_weight="1.3"
                  android:layout_width="0dp"
                  android:background="@color/completedColor"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Time Expected:"
                  android:textColor="#f8f8f8"
                  android:id="@+id/completed_task_expected_time"
                  android:layout_margin="2dp"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/completed_in"
                  android:textColor="#f8f8f8"
                  android:id="@+id/completed_task_completed_time"
                  android:layout_margin="2dp"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="+16"
                  android:id="@+id/time_result"
                  android:textColor="#f8f8f8"
                  android:layout_margin="2dp"
        />

    </LinearLayout>

</LinearLayout>